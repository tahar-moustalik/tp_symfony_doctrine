{% extends 'base.html.twig' %}


{% block body %}

    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                Add Order
            </div>
            <div class="card-body">
                <form action="{{ path('order_add') }}" method="post">

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="products">Produits</label>
                        </div>
                        <select class="custom-select" id="products">

                            <option selected>Selectionner...</option>

                            {% for product in products %}
                                <option value="{{ product.id }}-{{ product.quantity }}">{{ product.name }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="quantity">Quantite</label>
                        <input type="number" min="1"  class="form-control" id="quantity" name="quantity">
                    </div>
                    <a href="#" class="btn btn-sm btn-danger" id="addToCart"><i class="material-icons" style="margin-top:2px;">add_circle</i></a>
                    <div class=" form-group row">
                        <div class="col-12">
                            <div class="title">
                                <br>
                                <div id="orderedProducts"></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            <label for="ligneCmds"></label>
                            <select id="ligneCmds"  class="form-group"
                                    multiple="multiple"
                                    name="ligneCmds[]">
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Add</button>
                </form>
            </div>
        </div>

    </div>

    {% block javascripts %}
        {{ encore_entry_script_tags('order') }}

    {% endblock %}
{% endblock %}